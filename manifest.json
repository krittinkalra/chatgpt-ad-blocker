{
  "manifest_version": 3,
  "name": "ChatGPT Ad Blocker",
  "version": "1.0",
  "description": "Open source ad blocker for ChatGPT. Community-driven and privacy-friendly.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png", 
    "48": "icon.png",
    "128": "icon.png"
  }
}